{
  "name": "ts-app-boilerplate",
  "version": "1.0.0",
  "author": "miarao",
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build-clean": "turbo run build --cache=local:,remote:",
    "clean": "turbo clean",
    "lint": "turbo run lint -- --ext .ts,.tsx,.js,.jsx,.json",
    "maintain": "yarn lint --fix && prettier --write '**/*.json' && rimraf node_modules && yarn sort-package-json && yarn tree",
    "prepare": "yarn install && yarn build-clean && yarn test-clean && yarn maintain",
    "run-services-cli": "yarn workspace services-cli run:cli",
    "sort-package-json": "sort-package-json 'modules/*/package.json' 'package.json'",
    "start-app": "yarn workspace heptagon run start",
    "start-document-api": "yarn workspace document-api start",
    "start-interactive-session": "node modules/model-hub/dist/src/model-hub.js start",
    "start-local-services": "yarn workspace services-local start:local",
    "test": "turbo run test",
    "test-clean": "turbo run test --cache=local:,remote:",
    "tree": "node ./modules/misc-fs/dist/src/fs-tree.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@jest/core": "29.7.0",
    "@jest/transform": "29.7.0",
    "jest": "29.7.0",
    "jest-config": "29.7.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-jsonc": "^2.19.1",
    "eslint-plugin-prettier": "^4.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^2.7.1",
    "sort-package-json": "^1.57.0",
    "ts-jest": "^29.1.1",
    "turbo": "^2.3.4",
    "typescript": "^5.7"
  },
  "packageManager": "yarn@4.5.2",
  "engines": {
    "node": ">=22"
  }
}
